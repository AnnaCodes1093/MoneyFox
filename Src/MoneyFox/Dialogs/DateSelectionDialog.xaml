<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    xmlns:moneyFox="clr-namespace:MoneyFox;assembly=MoneyFox"
    xmlns:effects="clr-namespace:MoneyFox.Effects;assembly=MoneyFox"
    xmlns:helpers="clr-namespace:MoneyFox.Business.Helpers;assembly=MoneyFox.Business"
    x:Class="MoneyFox.Dialogs.DateSelectionDialog"
    BindingContext="{x:Static moneyFox:DesignTimeViewModelLocator.DesignTimeSelectDateRangeDialogViewModel}">

    <!--You can set an animation in the xaml file or in the csharp code behind-->
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
            PositionIn="Center"
            PositionOut="Center"
            ScaleIn="1.2"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>

    <!--You can use any elements here which are extended from Xamarin.Forms.View-->
    <StackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="CenterAndExpand" 
        Padding="20, 20, 20, 20"
        BackgroundColor="{x:Static helpers:StyleHelper.DialogBackgroundColor}">

        <Label Text="{Binding Resources[SelectDateLabel]}"
               Style ="{StaticResource ListItemHeaderStyle}"/>

        <Grid>
            <Label Style="{StaticResource DeemphasizedLabelStyle}" 
                   Text="{Binding Resources[TimeRangeStartLabel]}"
                   HorizontalOptions="StartAndExpand"/>
        </Grid>
        <DatePicker Date="{Binding StartDate}" />

        <Label Style="{StaticResource DeemphasizedLabelStyle}" 
               Text="{Binding Resources[TimeRangeEndLabel]}"/>
        <DatePicker Date="{Binding EndDate}" />

        <Button Text="{Binding Resources[DoneLabel]}"
                Clicked="Button_OnClicked">
            <Button.Effects>
                <effects:PrimaryButtonEffect />
            </Button.Effects>
        </Button>
    </StackLayout>
</pages:PopupPage>
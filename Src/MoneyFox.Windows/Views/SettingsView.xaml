<views:MvxWindowsPage x:Class="MoneyFox.Windows.Views.SettingsView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:userControls="using:MoneyFox.Windows.Views.UserControls"
                      xmlns:views="using:MvvmCross.Platforms.Uap.Views"
                      xmlns:input="using:Telerik.UI.Xaml.Controls.Input"
                      xmlns:designTime="using:MoneyFox.Business.ViewModels.DesignTime"
                      xmlns:converter="using:MoneyFox.Windows.Converter"
                      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
                      mc:Ignorable="d">

    <d:MvxWindowsPage.DataContext>
        <designTime:DesignTimeSettingsViewModel />
    </d:MvxWindowsPage.DataContext>

    <views:MvxWindowsPage.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </views:MvxWindowsPage.Resources>

    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding SettingsSecurityViewModel.LoadCommand, Mode=OneWay}" />
        </core:EventTriggerBehavior>
        <core:EventTriggerBehavior EventName="Unloaded">
            <core:InvokeCommandAction Command="{Binding SettingsSecurityViewModel.UnloadCommand, Mode=OneWay}" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Grid>
        <Pivot>
            <!--  Settings  -->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock Text="Backup"
                               x:Uid="SettingsHeaderBackup"
                               Style="{StaticResource UwpPageTitleStyle}"
                               x:Name="FirstHeader"
                               Margin="0,0,-10,0" />
                </PivotItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <!-- Background Job -->
                        <StackPanel DataContext="{Binding BackgroundJobViewModel}">
                            <TextBlock Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                                       Text="{Binding Resources[AutobackupInformationLabel]}"
                                       TextWrapping="WrapWholeWords" />

                            <ToggleSwitch VerticalAlignment="Center"
                                          Margin="0,6,0,0"
                                          Header="{Binding Resources[AutobackupLabel]}"
                                          IsOn="{Binding IsAutoBackupEnabled,
                                         Mode=TwoWay}" />

                            <TextBlock Margin="0,10,0,3"
                                       Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                                       Text="{Binding Resources[BackupSyncRecurrenceInfoLabel]}"
                                       TextWrapping="WrapWholeWords" />
                            <input:RadNumericBox
                                Value="{Binding BackupSyncRecurrence, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                        </StackPanel>

                        <!-- Personalizations -->
                        <StackPanel DataContext="{Binding PersonalizationViewModel}">
                            <TextBlock Margin="5" x:Uid="ThemeToggleDescription"
                                       Text="You can change between a dark and light theme. To apply this change please restart the application."
                                       TextWrapping="WrapWholeWords"
                                       Style="{StaticResource DeemphasizedBodyTextBlockStyle}" />
                            <ComboBox
                                SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <ComboBoxItem x:Uid="Dark" Content="Dark" />
                                <ComboBoxItem x:Uid="Light" Content="Light" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Security -->
                        <StackPanel DataContext="{Binding SettingsSecurityViewModel}">
                            <ToggleSwitch x:Name="toggleSwitch"
                                          IsOn="{Binding IsPasswortActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          x:Uid="PasswordSettingSwitch"
                                          OnContent="Password protection active"
                                          OffContent="Password protection inactive" />

                            <StackPanel
                                Visibility="{Binding IsOn, ElementName=toggleSwitch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanVisibilityConverter}}">
                                <PasswordBox Header="Password"
                                             x:Uid="Password"
                                             Margin="0,5,0,0"
                                             Password="{Binding Password, Mode=TwoWay}"
                                             PasswordRevealMode="Peek" />
                                <PasswordBox Header="Password Confirmation"
                                             x:Uid="PasswordConfirmation"
                                             Margin="0,5,0,0"
                                             Password="{Binding PasswordConfirmation, Mode=TwoWay}"
                                             PasswordRevealMode="Peek" />

                                <Button x:Uid="SavePassword"
                                        Margin="0,12,0,0"
                                        HorizontalAlignment="Stretch"
                                        Content="Save Password"
                                        Command="{Binding SavePasswordCommand}" />
                            </StackPanel>
                            <ToggleSwitch x:Name="PassportSwitch"
                                          IsOn="{Binding IsPassportActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          x:Uid="PassportSettingSwitch"
                                          OnContent="Passport Login Enabled"
                                          OffContent="Enable Passport Login" />
                            <TextBlock x:Name="PassportStatus"
                                       Margin="0,0,0,15"
                                       HorizontalAlignment="Center"
                                       TextWrapping="WrapWholeWords"
                                       Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                                       TextAlignment="center"
                                       Text="Text" />
                        </StackPanel>

                        <!-- Shortcuts -->
                        <StackPanel DataContext="{Binding SettingsShortcutsViewModel}">
                            <ToggleSwitch VerticalAlignment="Center"
                                          Header="Show Cashflow on Maintile"
                                          x:Uid="ShowInfoOnMainTileHeader"
                                          IsOn="{Binding ShowInfoOnMainTile, Mode=TwoWay}"
                                          OnContent="yes" />
                            <Path Data="M9,242 L456,242"
                                  Height="15"
                                  Margin="0,10"
                                  Stretch="Fill"
                                  Stroke="DarkSlateGray"
                                  UseLayoutRounding="False"
                                  StrokeThickness="2" />

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="301*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch"
                                      Width="50"
                                      Height="50"
                                      Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                    <Image Source="/Assets/incomeTileIcon.png"
                                           VerticalAlignment="Stretch"
                                           HorizontalAlignment="Stretch" />
                                </Grid>
                                <Button Content="create income tile"
                                        x:Uid="AddIncomeTile"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Command="{Binding CreateIncomeShortcutCommand}"
                                        Visibility="{Binding IsIncomeShortcutPinned, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=revert}"
                                        Margin="12,0,0,0" />
                                <Button Content="remove income tile"
                                        x:Uid="RemoveIncomeTile"
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        Visibility="{Binding IsIncomeShortcutPinned, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Command="{Binding RemoveIncomeShortcutCommand}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center" />
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="301*" />
                                </Grid.ColumnDefinitions>
                                <Grid Background="{ThemeResource SystemControlHighlightAccentBrush}"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                                    <Image Source="/Assets/spendingTileIcon.png"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Stretch" />
                                </Grid>
                                <Button Content="create spending tile"
                                        x:Uid="AddExpenseTile"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Command="{Binding CreateSpendingShortcutCommand}"
                                        Visibility="{Binding IsSpendingShortcutPinned, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=revert}"
                                        Margin="12,0,0,0" />
                                <Button Content="remove spending tile"
                                        x:Uid="RemoveExpenseTile"
                                        Grid.Column="1"
                                        Visibility="{Binding IsSpendingShortcutPinned, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Command="{Binding RemoveSpendingShortcutCommand}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Margin="12,0,0,0" />
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="301*" />
                                </Grid.ColumnDefinitions>
                                <Grid Background="{ThemeResource SystemControlHighlightAccentBrush}"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                                    <Image Source="/Assets/transferTileIcon.png"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Stretch" />
                                </Grid>
                                <Button Content="create transfer tile"
                                        x:Uid="AddTransferTile"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Command="{Binding CreateTransferShortcutCommand}"
                                        Visibility="{Binding IsTransferShortcutPinned, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=revert}"
                                        Margin="12,0,0,0" />
                                <Button Content="remove transfer tile"
                                        x:Uid="RemoveTransferTile"
                                        Grid.Column="1"
                                        Command="{Binding RemoveTransferShortcutCommand}"
                                        Visibility="{Binding IsTransferShortcutPinned, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        Margin="12,0,0,0" />
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <!--  About  -->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock Text="Tiles"
                               x:Uid="SettingsHeaderTiles"
                               Style="{StaticResource UwpPageTitleStyle}"
                               Margin="0,0,-10,0" />
                </PivotItem.Header>
                <userControls:AboutUserControl DataContext="{Binding AboutViewModel}" />
            </PivotItem>
        </Pivot>
    </Grid>
</views:MvxWindowsPage>
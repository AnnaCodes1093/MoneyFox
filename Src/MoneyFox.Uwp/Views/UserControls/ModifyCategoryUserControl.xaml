<UserControl
    x:Class="MoneyFox.Uwp.Views.UserControls.ModifyCategoryUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyFox.Uwp.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ScrollViewer HorizontalScrollMode="Auto"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12,0,12,0" EntranceNavigationTransitionInfo.IsTargetElement="True">
            <TextBox x:Uid="Name"
                     Margin="0,0,0,12"
                     VerticalAlignment="Top"
                     Header="Name"
                     Text="{Binding SelectedCategory.Name,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
            <TextBox x:Uid="Notes"
                     Margin="0,0,0,12"
                     VerticalAlignment="Top"
                     Header="Notes"
                     Text="{Binding SelectedCategory.Notes,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </ScrollViewer>

</UserControl>

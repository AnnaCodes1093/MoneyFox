<Page x:Class="MoneyFox.Uwp.Views.BackupView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:converter="using:MoneyFox.Uwp.Converter"
                      xmlns:designTime="using:MoneyFox.Presentation.ViewModels.DesignTime"
                      xmlns:i="using:Microsoft.Xaml.Interactivity"
                      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                      mc:Ignorable="d"
                      DataContext="{Binding BackupVm, Source={StaticResource Locator}}">

    <d:Page.DataContext>
        <designTime:DesignTimeBackupViewModel />
    </d:Page.DataContext>

    <Page.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter" />
        <converter:DateVisibilityConverter x:Key="DateVisibilityConverter" />
    </Page.Resources>

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding InitializeCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid Margin="{StaticResource MediumLeftRightMargin}"
          EntranceNavigationTransitionInfo.IsTargetElement="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Bind Resources['BackupTitle']}"
                   Style="{StaticResource UwpPageTitleStyle}" />

        <StackPanel Grid.Row="1"
                    Margin="19,9.5,19,0"
                    EntranceNavigationTransitionInfo.IsTargetElement="True">
            <Button x:Uid="Login"
                    HorizontalAlignment="Stretch"
                    Command="{Binding LoginCommand}"
                    Visibility="{Binding IsLoggedIn,
                                         Converter={StaticResource BooleanVisibilityConverter},
                                         ConverterParameter=revert}" />
            <Button x:Uid="Logout"
                    HorizontalAlignment="Stretch"
                    Command="{Binding LogoutCommand}"
                    Visibility="{Binding IsLoggedIn,
                                         Converter={StaticResource BooleanVisibilityConverter}}" />
            <TextBlock x:Uid="BackupInformation"
                       Margin="-5,12,0,7"
                       Text="BackupInformation"
                       TextWrapping="WrapWholeWords" />
            <Button x:Uid="CreateBackup"
                    Margin="0,0,0,7"
                    HorizontalAlignment="Stretch"
                    Command="{Binding BackupCommand}"
                    Content="Create Backup" />
            <TextBlock x:Uid="RestoreInformation"
                       Margin="-5,5,0,7"
                       Text="RestoreInformation"
                       TextWrapping="WrapWholeWords" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="41*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <Button x:Uid="RestoreBackup"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        Command="{Binding RestoreCommand}"
                        Content="Restore Backup"
                        IsEnabled="{Binding BackupAvailable}" />

                <ProgressRing Grid.Column="1"
                              Margin="0,3,0,3"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Background="Transparent"
                              IsActive="{Binding IsLoadingBackupAvailability}" />
            </Grid>

            <StackPanel Margin="0,15,0,7"
                        Orientation="Horizontal"
                        Visibility="{Binding BackupLastModified, Converter={StaticResource DateVisibilityConverter}}">
                <TextBlock x:Uid="BackupLastModifiedText"
                           Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                           Text="Last Backup created at:" />
                <TextBlock Margin="5,0,0,0"
                           Style="{StaticResource DeemphasizedBodyTextBlockStyle}"
                           Text="{Binding BackupLastModified}"
                           TextWrapping="WrapWholeWords" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>